<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>To do list</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/styles.css">
        <!-- Adobe fonts -->
    <link rel="stylesheet" href="https://use.typekit.net/fjb4zet.css" />
    </head>
<body class="background">
    <div class="heading-date">
       <h1 class="title">To Do List</h1> 
    </div>

    <div class="container items-box">

        <% listItems.forEach(function(item){ %>

        <form action="/delete" method="post">
            <div class="row row-items">
                <div class="col checkbox1 ">
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" id="" onChange="this.form.submit()">
                    
                </div>
                <div class="col todoitem">
                    <p class="single-item"><%= item.name%></p>

                </div>
                
            </div>
        </form>

       <% }); %> 
       <form action="/todolist/new-item" method="post">
        <div class="d-flex add-col">
            <input type="text" class="input-item form-control " name="newItem" placeholder="New Item" name="" id="">
            <button class="add-item btn " type="submit">+</button>
        </div>
       </form>
        
    </div>

    <div class="box">



    </div>
</body>
</html>